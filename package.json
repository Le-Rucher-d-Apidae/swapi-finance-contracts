{
  "name": "@swapi-finance/contracts",
  "devDependencies": {
    "@nomicfoundation/hardhat-foundry": "^1.1.1",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-truffle5": "^2.0.7",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@prb/test": "^0.6.4",
    "chai": "4.3.10",
    "forge-std": "github:foundry-rs/forge-std#v1.7.5",
    "hardhat": "^2.21.0",
    "hardhat-deploy": "^0.12.1",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.5",
    "solhint": "^3.6.2"
  },
  "dependencies": {
    "@openzeppelin/contracts-3.4.1": "npm:@openzeppelin/contracts@3.4.1",
    "@openzeppelin/contracts-5.0.2": "npm:@openzeppelin/contracts@5.0.2"
  },
  "version": "0.8.4",
  "description": "Contracts for Swapi Finance üêù",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Le-Rucher-d-Apidae/swapi-finance-contracts.git"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "forge",
    "foundry",
    "smart-contracts",
    "solidity"
  ],
  "author": "Worker bee <dev@rucherapidae@gmail.com>",
  "license": "MIT",
  "scripts": {
    "cleanForge": "rm -rf cache out",
    "clean:cache": "rimraf ./build/ && rimraf ./artifacts/ && rimraf ./cache/",
    "clean": "pnpm run clean:cache && pnpm run cleanForge",
    "clean:node": "rimraf ./node_modules/",
    "clean:HH": "rimraf hardhat-artifacts && rimraf hardhat-cache",
    "clean:all": "pnpm run clean && pnpm run clean:HH  && pnpm run clean:node",
    "build": "forge build --skip test",
    "build:all": "forge build",
    "build:CI": "forge build --optimize --sizes --skip test",
    "lint": "pnpm run lint:sol:check && pnpm run prettier:check",
    "lint:sol:check": "forge fmt --check && pnpm solhint {script,src,test}/**/*.sol",
    "lint:sol:write": "forge fmt && pnpm solhint {script,src,test}/**/*.sol",
    "lint:ts": "prettier --check ./test/**/*.ts --check",
    "prettier:check": "prettier --check **/*.{json,md,yml} --ignore-path=.prettierignore",
    "prettier:write": "prettier --write **/*.{json,md,yml} --ignore-path=.prettierignore",
    "prettier:write:1": "prettier --write TODO.md --ignore-path=.prettierignore",
    "hardhat:test": "hardhat test test/eth-token-recover/*",
    "hardhat:testT": "hardhat test --show-stack-traces test/eth-token-recover/*",
    "forge:test": "forge test",
    "forge:test:all": "forge test -vv",
    "forge:test:MyERC20": "forge test -vvv --match-path test/sampleTests/MyERC20.t.sol",
    "forge:test:BwsErc20": "forge test -vvv --match-path test/BwsErc20.t.sol",
    "forge:test:StakingRewards2": "forge test -vvv --match-path test/StakingRewards2_baseTests.t.sol",
    "forge:test:StakingRewards2ww": "forge test -vvv --match-path test/StakingRewards2_withWithdrawal.t.sol",
    "forge:test:StakingRewards2wow": "forge test -vvv --match-path test/StakingRewards2_woWithdrawal.t.sol",
    "forge:test:StakingRewards2v": "forge test -vvv --match-path test/StakingRewards2_VariableRewardRate_baseTests.t.sol",
    "forge:test:StakingRewards2vww": "forge test -vvv --match-path test/StakingRewards2_VariableRewardRate_withWithdrawal.t.sol",
    "forge:test:StakingRewards2vwow": "forge test -vvv --match-path test/StakingRewards2_VariableRewardRate_woWithdrawal.t.sol",
    "forge:test:StakingRewards2vc": "forge test -vvv --match-path test/StakingRewards2_VariableRewardRate_CustomTests.t.sol",
    "forgeTest": "forge test ",
    "test:coverage": "forge coverage",
    "test:coverage:report": "forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage",
    "precompile": "rimraf ./build/",
    "compile": "npx hardhat compile",
    "COMPILE": "npx hardhat compile --force",
    "pretest": "pnpm compile",
    "test": "npm run forge:test:all",
    "test:HH": "npm run hardhat:test",
    "test:Forge": "npm run forge:test",
    "prepublishOnly": "pnpm test",
    "publishPublic": "pnpm publish --access public",
    "PUBLISH": "pnpm run clean && pnpm run compile && pnpm run publishPublic",
    "PUBLISH:quick": "pnpm run publishPublic"
  },
  "bugs": {
    "url": "https://github.com/Le-Rucher-d-Apidae/swapi-finance-contracts/issues"
  },
  "homepage": "https://www.swapi.finance"
}
